
{
    "manifest_version": 3,
    "name": "クイックメモ",
    "version": "0.5.4",
    "description": "選択した箇所をメモする",
    "icons": {
        "48": "./appicon512.png"
    },
    "background": {
        "service_worker": "./background.js"
    },
    "action": {
        "default_icon": {
            "32": "appicon512.png"
        },
        "default_popup": "app.html"
    },
    "permissions": ["storage", "contextMenus"]
}
